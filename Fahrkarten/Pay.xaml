<Window x:Class="Fahrkarten.Pay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fahrkarten"
        mc:Ignorable="d"
        Title="Pay" Height="241" Width="557">
    <Grid Margin="0,0,0,5">
        <Button x:Name="Button1000" Content="" HorizontalAlignment="Left" Margin="24,86,0,0" VerticalAlignment="Top" Width="126" Height="69">
            <Button.Background>
                <ImageBrush ImageSource="/10euro.jpg"/>
            </Button.Background>
        </Button>
        <Button x:Name="Button500" Content="" HorizontalAlignment="Left" Margin="198,86,0,0" VerticalAlignment="Top" Height="69" Width="112">
            <Button.Background>
                <ImageBrush ImageSource="/5euro.jpg"/>
            </Button.Background>
        </Button>
        <Button x:Name="Button200" Content="" HorizontalAlignment="Left" Margin="352,86,0,0" VerticalAlignment="Top" Height="69" Width="69">
            <Button.Background>
                <ImageBrush ImageSource="/2Euro.jpg"/>
            </Button.Background>
        </Button>
        <Button x:Name="Button100" Content="" HorizontalAlignment="Left" Margin="453,87,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Width="69" Height="69">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="1.153"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
            <Button.Background>
                <ImageBrush ImageSource="/1Euro.jpg"/>
            </Button.Background>
        </Button>

    </Grid>
</Window>
